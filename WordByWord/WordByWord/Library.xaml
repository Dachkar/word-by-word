<Window x:Class="WordByWord.Library"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordByWord"
        mc:Ignorable="d"
        Title="Library" Height="475" Width="700">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

             
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="75" />
                <RowDefinition Height="25" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <TextBlock Text="Library" Style="{StaticResource Lobster}" FontWeight="Bold" FontSize="50" VerticalAlignment="Center" Grid.Row="1" TextAlignment="Center" Grid.ColumnSpan="5" FontFamily=""></TextBlock>
            
            <Button Grid.Column="4" Grid.Row="1" Background="Transparent" Height="50" Width="50" Margin="10" BorderThickness="0">
                <StackPanel>
                    <Image Source="Resources/rightarrow.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="4" Grid.Row="4" Background="Transparent" Height="70" Width="70" Margin="10" BorderThickness="0">
                <StackPanel>
                    <Image Source="Resources/addbutton.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Grid.Row="3" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Grid.Row="4" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Grid.Row="5" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" Grid.Row="3" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" Grid.Row="4" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" Grid.Row="5" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="3" Grid.Row="3" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="3" Grid.Row="4" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="3" Grid.Row="5" Background="Transparent" Margin="5" BorderThickness="5" BorderBrush="Black">
                <StackPanel>
                    <Image Source="Resources/placeholder.png"/>
                </StackPanel>
            </Button>
        </Grid>
    </StackPanel>
</Window>
